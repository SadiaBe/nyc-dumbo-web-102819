<div class="card">
  <h3 class="word">
    <%= @word.name %>
  </h3>
  <em>Submitted by <%= @word.author %></em>
  <p>
    <%= @word.category %>
  </p>
  <p>
    <%= link_to 'Edit', edit_word_path(@word) %>
    <%= button_to "Delete That Word", word_path(@word), method: :delete %>
  </p>
</div>

<% @definitions.each do |definition| %>
  <div class="card">
    <p>
      [<%= definition.part_of_speech %>]: 
      <em>
        <%= definition.body %>
      </em>
    </p>
    <p>
      <%= "👍" * definition.likes %>
    </p>
    <div class="like-buttons">
      <%= button_to "👍", upvote_definition_path(definition), method: :patch, class: "like-button" %>
      <%= button_to "👎", downvote_definition_path(definition), method: :patch, class: "like-button" %>
    </div>
  </div>
<% end %>