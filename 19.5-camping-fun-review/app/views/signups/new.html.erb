<h1> Signup Form </h1>
<ul>
<% if flash[:errors] %> 
    <% flash[:errors].each do |error| %>
       <li>  <%= error %> </li> 
    <% end %> 
<% end %>
</ul>
<%= form_for @signup do |f| %>

    <%= f.label :camper %>
    <%= f.collection_select :camper_id, Camper.all, :id, :name %>

    <%= f.label :activity %>
    <%= f.collection_select :activity_id, Activity.all, :id, :name %>

    <%= f.label :time %>
    <%= f.number_field :time %> 

    <%= f.submit %>
<% end %>